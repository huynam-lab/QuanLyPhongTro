@{
    Layout = null;
    var title = ViewBag.Title ?? "Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        :root {
            --sidebar-width: 248px;
            --sidebar-bg: #101827;
            --sidebar-hover: rgba(255,255,255,.065);
            --topbar-height: 58px;
        }

        body {
            background: #f3f4f6;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Helvetica Neue", Arial, "Noto Sans", sans-serif;
        }

        .admin-wrapper {
            display: flex;
            min-height: 100vh;
        }
        .admin-sidebar {
            width: var(--sidebar-width);
            background: radial-gradient(circle at top, #1c275a 0%, #101827 55%);
            color: #fff;
            flex-shrink: 0;
            display: flex;
            flex-direction: column;
            position: sticky;
            top: 0;
            height: 100vh;
        }

            .admin-sidebar .brand {
                padding: 1rem 1.25rem .8rem;
                font-weight: 600;
                display: flex;
                gap: .55rem;
                align-items: center;
                border-bottom: 1px solid rgba(255,255,255,.065);
            }

                .admin-sidebar .brand i {
                    font-size: 1.3rem;
                }

            .admin-sidebar small.version {
                font-size: .65rem;
                opacity: .6;
                display: block;
                margin-top: .15rem;
            }

            .admin-sidebar .nav {
                padding: .75rem .5rem;
                flex: 1;
            }

            .admin-sidebar .nav-link {
                color: rgba(255,255,255,.65);
                display: flex;
                align-items: center;
                gap: .6rem;
                padding: .5rem .85rem;
                border-radius: .6rem;
                margin-bottom: .25rem;
                transition: background .15s ease-out;
                font-size: .92rem;
            }

                .admin-sidebar .nav-link i {
                    width: 20px;
                    text-align: center;
                    font-size: 1.05rem;
                }

                .admin-sidebar .nav-link.active,
                .admin-sidebar .nav-link:hover {
                    background: rgba(255,255,255,.11);
                    color: #fff;
                }

        /* ============ MAIN ============ */
        .admin-main {
            flex: 1;
            display: flex;
            flex-direction: column;
            min-width: 0;
        }

        .admin-topbar {
            height: var(--topbar-height);
            background: #fff;
            border-bottom: 1px solid rgba(15,23,42,.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 1.125rem;
            gap: 1rem;
            position: sticky;
            top: 0;
            z-index: 5;
        }

        .admin-topbar .page-title {
            display: flex;
            gap: .5rem;
            align-items: center;
        }

        .admin-topbar .rightbox {
            display: flex;
            gap: .65rem;
            align-items: center;
        }

        .admin-topbar .circle-btn {
            width: 34px;
            height: 34px;
            border-radius: 999px;
            border: none;
            background: #edf2ff;
            display: grid;
            place-items: center;
            color: #364fc7;
        }

        .admin-content {
            padding: 1.25rem clamp(.5rem, 1.3vw, 1.25rem);
        }

        footer.admin-footer {
            padding: .75rem 1.25rem 1.25rem;
            font-size: .7rem;
            color: #94a3b8;
        }

        /* ============ RESPONSIVE ============ */
        @*@media (max-width: 991.98px) {
            .admin-sidebar {
                position: fixed;
                left: -260px;
                transition: left .2s;
                z-index: 30;
            }

            .admin-sidebar.show {
                left: 0;
            }

            .admin-main {
                flex: 1;
            }
        }*@

        .overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,.35);
            z-index: 25;
            display: none;
        }

        .overlay.show {
            display: block;
        }
    </style>

    @RenderSection("styles", required: false)
</head>
<body>
    <div class="overlay" id="sidebarOverlay"></div>

    <div class="admin-wrapper">
        <!-- SIDEBAR -->
        <aside class="admin-sidebar" id="adminSidebar">
            <div class="brand">
                <i class="bi bi-shield-lock"></i>
                <div>
                    Admin panel
                    <small class="version">QL Phòng trọ</small>
                </div>
            </div>
            <nav class="nav flex-column mt-2">
                <a class="nav-link @(ViewBag.Menu == "dashboard" ? "active" : "")"
                   href="@Url.Action("Dashboard","Quantrivien", new { area = "Admin" })">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
                <a class="nav-link @(ViewBag.Menu == "account" ? "active" : "")"
                   href="@Url.Action("TaiKhoan","Quantrivien", new { area = "Admin" })">
                    <i class="bi bi-people"></i> Tài khoản
                </a>
                <a class="nav-link @(ViewBag.Menu == "phong" ? "active" : "")"
                   href="@Url.Action("PhongTro","Quantrivien", new { area = "Admin" })">
                    <i class="bi bi-houses"></i> Phòng / Tin đăng
                </a>
                <a class="nav-link @(ViewBag.Menu == "Dichvu" ? "active" : "")"
                   href="@Url.Action("Catalogs","Quantrivien", new { area = "Admin" })">
                    <i class="bi bi-grid"></i> Quản lý danh mục
                </a>
                <a class="nav-link"
                   href="@Url.Action("DangXuat", "User", new { area = "" })">
                    <i class="bi bi-box-arrow-right me-2"> </i>Đăng xuất
                </a>
            </nav>
        </aside>

        <!-- MAIN -->
        <div class="admin-main">
            <header class="admin-topbar">
                <div class="page-title">
                    <button class="btn btn-link d-lg-none p-0 me-2" id="sidebarToggle">
                        <i class="bi bi-list" style="font-size:1.35rem;"></i>
                    </button>
                    <h6 class="mb-0">@title</h6>
                </div>
                <div class="rightbox">
                    <button class="circle-btn d-none d-sm-grid" title="Thông báo">
                        <i class="bi bi-bell"></i>
                    </button>
                    <div class="d-flex align-items-center gap-2">
                        <div class="text-end d-none d-sm-block">
                            <div class="small fw-semibold">Admin</div>
                            <div class="small text-muted">Quản trị viên</div>
                        </div>
                        <div class="rounded-circle bg-light" style="width:34px;height:34px;display:grid;place-items:center;">
                            <i class="bi bi-person"></i>
                        </div>
                    </div>
                </div>
            </header>

            <main class="admin-content">
                @RenderBody()
            </main>

            <footer class="admin-footer text-center">
                © @DateTime.Now.Year Phòng trọ – Admin panel
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // toggle sidebar on mobile
        const sidebar = document.getElementById("adminSidebar");
        const toggle = document.getElementById("sidebarToggle");
        const overlay = document.getElementById("sidebarOverlay");

        if (toggle) {
            toggle.addEventListener("click", function () {
                sidebar.classList.toggle("show");
                overlay.classList.toggle("show");
            });
        }
        if (overlay) {
            overlay.addEventListener("click", function () {
                sidebar.classList.remove("show");
                overlay.classList.remove("show");
            });
        }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
