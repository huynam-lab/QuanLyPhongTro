
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<link href="~/Areas/Admin/Assets/ChuNhacss.css" rel="stylesheet" type="text/css" />
<div class="container-fluid py-3">

    <div class="post-sticky-wrap">
        <h3 class="section-title">Danh sách đăng tin</h3>
        <ul class="nav nav-tabs mb-4" id="postTabs">
            <li class="nav-item">
                <a class="nav-link active" href="#">Tất cả <span class="text-muted">(0)</span></a>
            </li>
        </ul>
    </div>
    <div style="width:100%; display:flex;">
        <div style="width:100%;padding:10px 0;">
            <!-- Ô tìm kiếm -->
            <div class="mb-4 d-flex align-items-center">
                <div class="input-group" style="max-width: 400px;">
                    <input type="text" class="form-control" placeholder="Tìm theo mã tin hoặc tiêu đề">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>

            <!-- TRẠNG THÁI KHI KHÔNG CÓ TIN -->
            <div class="text-center py-5" id="emptyState">
                <img src="https://cdn-icons-png.flaticon.com/512/7486/7486751.png"
                     width="180" class="mb-3 opacity-75" />
                <p class="fs-5 text-muted mb-1">Tìm thấy 0 tin đăng</p>
                <p>Bấm <a href="~/Admin/TinDang/DangTin" class="text-primary fw-semibold">vào đây</a> để bắt đầu đăng tin</p>
            </div>

            <!-- TRẠNG THÁI KHI CÓ TIN -->
            <div id="listState" class="d-none">
                <table class="table table-hover align-middle shadow-sm">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Mã tin</th>
                            <th scope="col">Tiêu đề</th>
                            <th scope="col" style="width:150px;">Ngày đăng</th>
                            <th scope="col" style="width:120px;">Trạng thái</th>
                            <th scope="col" style="width:120px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#1001</td>
                            <td>Phòng trọ quận 7, đầy đủ nội thất, gần ĐH Tôn Đức Thắng</td>
                            <td>02/11/2025</td>
                            <td><span class="badge bg-success">Hiển thị</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                <button class="btn btn-sm btn-outline-primary me-1 d-none"><i class="bi bi-pencil"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td>#1002</td>
                            <td>Nhà nguyên căn Bình Thạnh – thoáng mát, an ninh</td>
                            <td>01/11/2025</td>
                            <td><span class="badge bg-warning text-dark">Chờ duyệt</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                <button class="btn btn-sm btn-outline-primary me-1"><i class="bi bi-pencil"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

      


    </div>

</div>
@section scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Sau này bạn thay điều kiện này = dữ liệu thực từ server (Model.Any())
            const hasPosts = true; // nếu = false sẽ hiện phần "Tìm thấy 0 tin đăng"
            const emptyState = document.getElementById("emptyState");
            const listState = document.getElementById("listState");

            if (hasPosts) {
                emptyState.classList.add("d-none");
                listState.classList.remove("d-none");
            }
        });
    </script>
}
