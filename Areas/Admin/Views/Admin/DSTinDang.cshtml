
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
@model QuanLyPhongTro.Areas.Admin.ChuNhaViewModels.ChuNha
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link href="~/Areas/Admin/Assets/ChuNhacss.css" rel="stylesheet" type="text/css" />
<div class="container-fluid py-3">

    <div class="post-sticky-wrap">
        <h3 class="section-title">Danh sách đăng tin</h3>
        <ul class="nav nav-tabs mb-4" id="postTabs">
            <li class="nav-item">
                <a class="nav-link active" href="#">Tất cả <span class="text-muted">(0)</span></a>
            </li>
        </ul>
    </div>
    <div style="width:100%; display:flex;">
        <div style="width:100%;padding:10px 0;">
            <!-- Ô tìm kiếm -->
            <div class="mb-4 d-flex align-items-center">
                <div class="input-group" style="max-width: 400px;">
                    <input type="text" class="form-control" placeholder="Tìm theo mã tin hoặc tiêu đề">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>

            <!-- TRẠNG THÁI KHI KHÔNG CÓ TIN -->
            <div class="text-center py-5 @(Model?.PhongTros != null && Model.PhongTros.Any() ? "d-none" : "")" id="emptyState">
                <img src="https://cdn-icons-png.flaticon.com/512/7486/7486751.png"
                     width="180" class="mb-3 opacity-75" />
                <p class="fs-5 text-muted mb-1">Tìm thấy 0 tin đăng</p>
                <p>Bấm <a href="~/Admin/TinDang/DangTin" class="text-primary fw-semibold">vào đây</a> để bắt đầu đăng tin</p>
            </div>

            <!-- TRẠNG THÁI KHI CÓ TIN -->
            <div id="listState" class="@(Model?.PhongTros != null && Model.PhongTros.Any() ? "" : "d-none")">
                <table class="table table-hover align-middle shadow-sm">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Mã tin</th>
                            <th scope="col">Tiêu đề</th>
                            <th scope="col" style="width:150px;">Ngày đăng</th>
                            <th scope="col" style="width:120px;">Trạng thái</th>
                            <th scope="col" style="width:120px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.PhongTros != null)
                            {
                            foreach (var item in Model.PhongTros)
                                {
                                <tr>
                                    <td>#@item.ID_Phong_Tro</td>
                                    <td>@item.Ten_Phong</td>
                                    <td>@(item.Ngay_Dang.HasValue ? item.Ngay_Dang.Value.ToString("dd/MM/yyyy") : "—")</td>
                                    <td>
                                        @if (item.Trang_Thai == true)
                                            {
                                            <span class="badge bg-success">Hiển thị</span>
                                            }
                                        else
                                            {
                                            <span class="badge bg-warning text-dark">Đang duyệt</span>
                                            }
                                    </td>
                                    <td class="d-flex gap-2">
                                        @if (item.Trang_Thai == true)
                                            {
                                            <button class="btn btn-sm btn-outline-danger d-none">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                            }
                                        else
                                            {
                                                using (Html.BeginForm("DeletePhongTro", "Admin", FormMethod.Post, new { @area = "Admin", onsubmit = "return confirm('Xóa tin này luôn?');" }))
                                                {
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.ID_Phong_Tro" />
                                                <button class="btn btn-sm btn-outline-danger" type="submit">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                                }
                                                using (Html.BeginForm("UpdateData", "Admin", FormMethod.Post, new { @area = "Admin"}))
                                                {
                                                @Html.AntiForgeryToken()
                                                <a href="@Url.Action("UpdateData", "Admin", new { area = "Admin", id = item.ID_Phong_Tro })"
                                                   class="btn btn-sm btn-outline-primary me-1">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                }
                                            
                                            }
                                    </td>
                                </tr>
                                }
                            }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
@if (TempData["SuccessMessage"] != null)
    {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: "Thành công 🎉",
                text: "@Html.Raw(TempData["SuccessMessage"])",
                icon: "success",
                confirmButtonText: "OK",
                timer: 3000, // Tự đóng sau 3 giây
                timerProgressBar: true
            });
        });
    </script>
    }
