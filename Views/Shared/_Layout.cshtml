    <script>
        // xử lý link
        $(document).ready(function () {
            // 1️⃣ Lấy URL hiện tại (chỉ phần path, không query string)
            var currentUrl = window.location.pathname.toLowerCase();

            // 2️⃣ Xóa toàn bộ class active-menu & fw-bold
            $('.header-nav .nav-link').removeClass('active-menu fw-bold');

            // 3️⃣ Duyệt qua từng link trong menu
            $('.header-nav .nav-link').each(function () {
                var linkUrl = $(this).attr('href').toLowerCase();

                // Nếu URL hiện tại khớp chính xác (bỏ qua / ở cuối)
                if (currentUrl.replace(/\/$/, '') === linkUrl.replace(/\/$/, '')) {
                    $(this).addClass('active-menu fw-bold');
                }
            });

            // 4️⃣ Khi click (nếu trang không reload)
            $('.header-nav .nav-link').on('click', function () {
                $('.header-nav .nav-link').removeClass('active-menu fw-bold');
                $(this).addClass('active-menu fw-bold');
            });
        });
    </script>

