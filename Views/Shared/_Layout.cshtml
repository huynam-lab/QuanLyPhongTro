    </footer>

    <!-- ======================================================= -->
    <!-- MODAL 1: TÌM KIẾM KHU VỰC (LOCATION MODAL) -->
    <!-- Đã thêm class modal-dialog-scrollable -->
    <!-- ======================================================= -->
    <div class="modal fade" id="locationModal" tabindex="-1" aria-labelledby="locationModalLabel" aria-hidden="true">
        <!-- Thêm class modal-dialog-scrollable ở đây -->
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg" style="max-width: 550px;">
            <div class="modal-content">
                <div class="modal-header border-bottom-0 pt-4 px-4 pb-2">
                    <h5 class="modal-title fw-bold">Tìm theo khu vực</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Body P-0 để list item sát mép -->
                <div class="modal-body p-0">
                    <div class="location-list" id="locationListContainer">
                        @{
                            // Lấy dữ liệu từ ViewBag và ép kiểu
                            var khuVucDBList = (IEnumerable<QuanLyPhongTro.Models.Khu_Vuc>)ViewBag.KhuVuc;

                            // Thêm mục "Toàn quốc" cố định
                            <div class="location-item">
                                <label class="d-flex align-items-center w-100">
                                    <input type="checkbox"
                                           class="form-check-input flex-shrink-0"
                                           data-id="all"
                                           checked> <span class="ms-3 text-dark">Toàn quốc</span>
                                </label>
                                <i class="bi bi-chevron-right location-arrow"></i>
                            </div>

                            // Lặp qua danh sách từ Database
                            if (khuVucDBList != null)
                            {
                                foreach (var khuVuc in khuVucDBList)
                                {
                                    <div class="location-item">
                                        <label class="d-flex align-items-center w-100">
                                            <input type="checkbox"
                                                   class="form-check-input flex-shrink-0"
                                                   data-id="@khuVuc.ID_KV"
                                                   data-name="@khuVuc.Ten_KV"> <span class="ms-3 text-dark">@khuVuc.Ten_KV</span>
                                            </label>
                                            <i class="bi bi-chevron-right location-arrow"></i>
                                        </div>
                                    }
                                }
                        }
                    </div>
                </div>

                <!-- Footer cố định -->
                <div class="modal-footer border-top-0 pt-3 pb-4 px-4 flex-shrink-0">
                    <button type="button" class="btn btn-apply w-100 py-2" data-bs-dismiss="modal" id="applyLocationFilter">
                        Áp dụng
                    </button>
                </div>
            </div>
        </div>
    </div>



    <!-- ======================================================= -->
    <!-- MODAL 2: BỘ LỌC (FILTER MODAL) - GIAO DIỆN MỚI -->
    <!-- ======================================================= -->
    <div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable filter-modal-lg">
            <div class="modal-content">

                <!-- Header Bộ lọc -->
                <div class="modal-header border-bottom-0 pt-4 px-4 pb-2">
                    <h5 class="modal-title fw-bold" id="filterModalLabel">Bộ lọc</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Body Bộ lọc -->
                <div class="modal-body p-4 filter-area">

                    <!-- 1. Danh mục cho thuê -->
                    <div class="mb-4">
                        <h6 class="filter-section-title">Danh mục cho thuê</h6>
                        <div class="d-flex flex-wrap justify-content-start gap-3">
                            <!-- Items Danh mục -->
                            <div class="category-item active" data-category="phongtro">
                                <i class="bi bi-house-door-fill category-icon"></i>
                                <span class="category-name">Phòng trọ</span>
                            </div>
                            <div class="category-item" data-category="nharieng">
                                <i class="bi bi-building-fill category-icon"></i>
                                <span class="category-name">Nhà riêng</span>
                            </div>
                            <div class="category-item" data-category="oghep">
                                <i class="bi bi-people-fill category-icon"></i>
                                <span class="category-name">Ở ghép</span>
                            </div>
                            <div class="category-item" data-category="matbang">
                                <i class="bi bi-shop category-icon"></i>
                                <span class="category-name">Mặt bằng</span>
                            </div>
                            <div class="category-item" data-category="canhochungcu">
                                <i class="bi bi-grid-fill category-icon"></i>
                                <span class="category-name">Căn hộ chung cư</span>
                            </div>
                            <div class="category-item" data-category="canhomini">
                                <i class="bi bi-box-fill category-icon"></i>
                                <span class="category-name">Căn hộ mini</span>
                            </div>
                            <a href="#" class="text-decoration-none text-muted mt-2 ps-2">Căn hộ dịch vụ</a>
                        </div>
                    </div>

                    <!-- 2. Lọc theo khu vực (Dropdowns) -->
                    <div class="mb-4 border-top pt-4">
                        <h6 class="filter-section-title">Lọc theo khu vực</h6>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label text-muted">Tỉnh thành</label>
                                <select class="form-select">
                                    <option selected>Toàn quốc</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-muted">Quận huyện</label>
                                <select class="form-select">
                                    <option selected>Tất cả</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-muted">Phường xã</label>
                                <select class="form-select">
                                    <option selected>Tất cả</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- 3. Khoảng giá (Radio tags) -->
                    <div class="mb-4 border-top pt-4">
                        <h6 class="filter-section-title">Khoảng giá</h6>
                        <div class="tag-group d-flex flex-wrap justify-content-start gap-2">
                            <button type="button" class="btn active" data-price-range="all">Tất cả</button>
                            <button type="button" class="btn" data-price-range="<1">Dưới 1 triệu</button>
                            <button type="button" class="btn" data-price-range="1-2">1 - 2 triệu</button>
                            <button type="button" class="btn" data-price-range="2-3">2 - 3 triệu</button>
                            <button type="button" class="btn" data-price-range="3-5">3 - 5 triệu</button>
                            <button type="button" class="btn" data-price-range="5-7">5 - 7 triệu</button>
                            <button type="button" class="btn" data-price-range="7-10">7 - 10 triệu</button>
                            <button type="button" class="btn" data-price-range="10-15">10 - 15 triệu</button>
                            <button type="button" class="btn" data-price-range=">15">Trên 15 triệu</button>
                        </div>
                    </div>

                    <!-- 4. Khoảng diện tích (Checkbox tags) -->
                    <div class="mb-4 border-top pt-4">
                        <h6 class="filter-section-title">Khoảng diện tích</h6>
                        <div class="tag-group d-flex flex-wrap justify-content-start gap-2">
                            <button type="button" class="btn active" data-area-range="all">Tất cả</button>
                            <button type="button" class="btn" data-area-range="<20">Dưới 20m²</button>
                            <button type="button" class="btn" data-area-range="20-30">20 - 30m²</button>
                            <button type="button" class="btn" data-area-range="30-50">30 - 50m²</button>
                            <button type="button" class="btn" data-area-range="50-70">50 - 70m²</button>
                            <button type="button" class="btn" data-area-range="70-90">70 - 90m²</button>
                            <button type="button" class="btn" data-area-range=">90">Trên 90m²</button>
                        </div>
                    </div>

                    <!-- 5. Đặc điểm nổi bật (Checkbox tags) -->
                    <div class="mb-4 border-top pt-4">
                        <h6 class="filter-section-title">Đặc điểm nổi bật</h6>
                        <div class="tag-group d-flex flex-wrap justify-content-start gap-2" id="utilityTags">
                            <button type="button" class="btn" data-utility="full-furniture">Đầy đủ nội thất</button>
