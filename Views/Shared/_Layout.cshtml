<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <link href="~/Assets/Css/Header.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/Css/Main.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/Css/Footer.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/Css/ModalMain.css" rel="stylesheet" type="text/css" />
    

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <header class="pt-header sticky-top">
        <div class="container-fluid header-top p-3">
            <div class="row align-items-center">

                <div class="col-lg-2 col-md-3 col-sm-6 col-6 d-flex align-items-center">
                    <a class="navbar-brand me-2" href="@Url.Action("Index", "User")">
                        <img src="~/Assets/Images/logo.jpg" alt="Phongtro123" style="height: 30px;" />
                    </a>
                </div>

                <!-- Khối Tìm kiếm & Bộ lọc (Vị trí bạn muốn giữ nguyên) -->
                <div class="col-lg-5 col-md-6 d-none d-md-flex align-items-center justify-content-start">
                    <div class="input-group search-box me-2" style="max-width: 300px;">
                        <span class="input-group-text bg-white border-end-0 border border-secondary border-opacity-25"><i class="bi bi-geo-alt"></i></span>
                        <input type="text"
                               class="form-control border-start-0 border border-secondary border-opacity-25"
                               placeholder="Tìm theo khu vực"
                               id="locationDisplay"
                               readonly
                               onclick="showLocationModal()">
                        <input type="hidden" id="selectedLocationsInput" value="">
                    </div>

                    <!-- Nút kích hoạt Modal Bộ lọc -->
                    <button class="btn btn-light filter-btn border border-secondary border-opacity-25 fw-bold"
                            style="min-width:100px"
                            onclick="showFilterModal()">
                        <i class="bi bi-filter"></i> Bộ lọc
                    </button>
                </div>

                <div class="col-lg-5 col-md-3 col-sm-6 col-6 d-flex align-items-center justify-content-end">

                    <a href="@Url.Action("TinDaLuu", "User")" class="btn btn-link text-decoration-none text-dark d-none d-lg-block">
                        <i class="bi bi-bookmark-fill text-warning me-1"></i> Tin đã lưu
                    </a>

                    <a href="@Url.Action("DangKy", "User")" class="btn btn-link text-decoration-none text-dark d-none d-lg-block">
                        <i class="bi bi-person me-1"></i> Đăng ký
                    </a>

                    <a href="@Url.Action("DangNhap", "User")" class="btn btn-link text-decoration-none text-dark d-none d-lg-block">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                    </a>

                    <a href="@Url.Action("DangTin", "User")" class="btn btn-danger ms-2 post-btn d-none d-lg-block" style="min-width:120px">
                        <i class="bi bi-pencil-square me-1"></i> Đăng tin
                    </a>


                    <button class="btn btn-light d-lg-none ms-2 menu-toggle-btn" style="display:flex" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                        <i class="bi bi-list"></i> <p style="margin:0 0 0 10px">Danh Mục</p>
                    </button>

                </div>
            </div>
        </div>

        <nav class="header-nav bg-white shadow-sm p-0 d-none d-lg-block">
            <div class="container-fluid" style="display:flex; justify-content:center">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("Index", "User")">Phòng trọ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("CanHoChungCu", "User")">Căn hộ chung cư</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("CanHoMini", "User")">Căn hộ mini</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("Blog", "User")">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("BangGiaDichVu", "User")">Bảng giá dịch vụ</a>
                    </li>
                </ul>
            </div>
        </nav>

    </header>

    <div class="offcanvas offcanvas-end pt-offcanvas" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">

        <div class="offcanvas-header pt-4 pb-0 border-bottom">
            <h5 class="offcanvas-title fw-bold" id="offcanvasRightLabel">
                <a href="#"><img src="~/Assets/Images/logo.jpg" alt="Phongtro123" style="height: 30px;" /></a>
            </h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body p-0">

            <div class="p-3 bg-light border-bottom">
                <a href="#" class="btn btn-danger w-100 p-2"><i class="bi bi-pencil-square me-2"></i> Đăng tin mới</a>
            </div>
            <div class="d-flex p-3 border-bottom">
                <a href="#" class="btn btn-outline-danger w-50 me-2">Đăng nhập</a>
                <a href="#" class="btn btn-danger w-50">Đăng ký</a>
            </div>

            <ul class="list-group list-group-flush offcanvas-menu">
                <li class="list-group-item">
                    <a href="#" class="d-flex justify-content-between align-items-center">
                        <div><i class="bi bi-bookmark-fill me-3 text-warning"></i> Tin đã lưu</div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="#" class="d-flex justify-content-between align-items-center">
                        <div><i class="bi bi-house me-3 text-muted"></i> Cho thuê phòng trọ</div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="#" class="d-flex justify-content-between align-items-center">
                        <div><i class="bi bi-building me-3 text-muted"></i> Cho thuê nhà nguyên căn</div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="#" class="d-flex justify-content-between align-items-center">
                        <div><i class="bi bi-grid-3x3-gap me-3 text-muted"></i> Cho thuê căn hộ</div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="#" class="d-flex justify-content-between align-items-center">
                        <div><i class="bi bi-person me-3 text-muted"></i> Tìm người ở ghép</div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="#" class="d-flex justify-content-between align-items-center">
                        <div><i class="bi bi-shop me-3 text-muted"></i> Cho thuê mặt bằng</div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="#" class="d-flex justify-content-between align-items-center">
                        <div><i class="bi bi-file-text me-3 text-muted"></i> Blog</div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="#" class="d-flex justify-content-between align-items-center">
                        <div><i class="bi bi-cash me-3 text-muted"></i> Bảng giá dịch vụ</div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- ===== Main content ===== -->
    <main class="pt-main">

        <!-- Vùng chứa chính (Đã thay đổi sang container-fluid và áp dụng max-width qua CSS) -->
        <div class="container-fluid pt-main-container">
            <div class="row pt-main-row">

                <!-- Cột 1: Banner Quảng cáo Trái (Giảm kích thước xuống col-lg-1) -->
                <!-- Thêm d-flex, justify-content-center, align-items-center để căn giữa banner -->
                <div class="col-lg-1 d-none d-lg-block pt-left-sidebar d-flex justify-content-center align-items-center">
                    <div class="pt-fixed-ad-wrapper">
                        <img src="~/Assets/Images/bds123_120_300.gif" alt="Banner Left" class="img-fluid rounded shadow-sm">
                    </div>
                </div>


                <!-- Cột Nội dung Chính (Tăng kích thước lên col-lg-10) -->
                <div class="col-lg-10 col-md-8 col-12 pt-main-content-wrapper">
                    @RenderBody()
                </div>

                <!-- Cột 3: Banner Quảng cáo Phải (Giảm kích thước xuống col-lg-1) -->
                <!-- Thêm d-flex, justify-content-center, align-items-center để căn giữa banner -->
                <div class="col-lg-1 col-md-4 d-none d-md-block pt-right-sidebar d-flex justify-content-center align-items-center">
                    <div class="pt-fixed-ad-wrapper-right">
                        <img src="~/Assets/Images/banner-thuecanho.jpg" alt="Banner Right" class="img-fluid rounded shadow-sm">
                    </div>
                </div>

            </div>
        </div>
    </main>

    <!-- ===== Floating Action Buttons ===== -->
    <div class="pt-floating-buttons">

        <!-- Nút Chat -->
        <!-- Thêm class để dễ dàng xử lý sự kiện trong JS -->
        <button id="chatButton" class="pt-floating-btn pt-chat-btn" aria-label="Nút chat">
            <!-- Icon tin nhắn (Sử dụng Bootstrap Icon: bi bi-chat-dots) -->
            <i class="bi bi-chat-dots"></i>
        </button>

        <!-- Nút Quay lên đầu trang -->
        <!-- Thêm class để dễ dàng xử lý sự kiện trong JS -->
        <button id="scrollToTopButton" class="pt-floating-btn pt-scroll-top-btn" aria-label="Quay lên đầu trang">
            <!-- Icon mũi tên lên (Sử dụng Bootstrap Icon: bi bi-arrow-up) -->
            <i class="bi bi-arrow-up"></i>
        </button>

    </div>


    <!-- ===== Footer ===== -->
