@model IEnumerable<QuanLyPhongTro.Models.ViewModels.PhongTroVM>
@{
    ViewBag.Title = "Căn hộ mini";
    var active = (string)ViewBag.ActiveTab ?? "mini";
}

<div class="container-fluid py-3" style="max-width:1140px">
    <div class="mb-3">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link @(active=="chungcu"?"active text-danger fw-bold":"")"
                   href="@Url.Action("CanHoChungCu","User")">Căn hộ chung cư</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(active=="mini"?"active text-danger fw-bold":"")"
                   href="@Url.Action("CanHoMini","User")">Căn hộ mini</a>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-lg-8">
            @Html.Partial("~/Views/Shared/_PhongTroList.cshtml", Model)
        </div>

        <div class="col-lg-4">
            <div class="sidebar-box">
                <h6 class="fw-bold mb-2">Bộ lọc nhanh</h6>
                <a class="d-block mb-2" href="@Url.Action("CanHoMini","User", new { page=1 })">Tất cả căn hộ mini</a>
                <a class="d-block mb-2" href="@Url.Action("CanHoMini","User", new { page=1, pageSize=20 })">Hiển thị 20 tin</a>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-tabs .nav-link.active {
        border-color: transparent;
        position: relative;
    }

        .nav-tabs .nav-link.active::after {
            content: "";
            position: absolute;
            left: 12px;
            right: 12px;
            bottom: -1px;
            height: 3px;
            background: #e03;
        }
</style>
